FROM golang:1.25 as builder
#RUN apt update && apt -y install unzip wget curl iproute2 net-tools \
#        curl git build-essential libssl-dev zlib1g-dev socat && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY .. .

RUN go build -o client
RUN chmod +x client

FROM ubuntu
COPY --from=builder /app/client /client
RUN groupadd -g 1301 androidusr && useradd -u 1300 -g 1301 androidusr && chmod +x /client && chown androidusr:androidusr /client
USER androidusr
ENTRYPOINT ["/client"]
